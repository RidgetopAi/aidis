# AIDIS Development Environment Configuration
NODE_ENV=development

# Database Configuration (AIDIS standardized naming)
AIDIS_DATABASE_URL=postgresql://ridgetop@localhost:5432/aidis_production
AIDIS_DATABASE_USER=ridgetop
AIDIS_DATABASE_HOST=localhost
AIDIS_DATABASE_NAME=aidis_production
AIDIS_DATABASE_PORT=5432
# AIDIS_DATABASE_PASSWORD will use fallback in development

# Legacy compatibility (fallback support)
DATABASE_USER=ridgetop
DATABASE_HOST=localhost
DATABASE_NAME=aidis_production
DATABASE_PORT=5432

# Authentication (AIDIS standardized naming)
# AIDIS_JWT_SECRET will use fallback in development
AIDIS_JWT_EXPIRES_IN=24h
AIDIS_BCRYPT_ROUNDS=10

# Legacy compatibility (fallback support)
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# Service Ports (development) - Phase 3 Dynamic Assignment
# For development, you can use fixed ports for easier debugging
# or set to 0 for dynamic assignment to avoid port conflicts
AIDIS_HTTP_PORT=8080
AIDIS_MCP_BRIDGE_PORT=8081
AIDIS_COMMAND_DEV_PORT=5000
AIDIS_COMMAND_PROD_PORT=5001
AIDIS_MCP_PORT=8080
AIDIS_HEALTH_PORT=8080

# Legacy compatibility (fallback support)
PORT=5000
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost

# To enable dynamic assignment in development, uncomment:
# AIDIS_MCP_PORT=0
# AIDIS_MCP_BRIDGE_PORT=0
# AIDIS_COMMAND_DEV_PORT=0
# AIDIS_COMMAND_PROD_PORT=0

# CORS (development)
AIDIS_CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Legacy compatibility
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging (development)
AIDIS_LOG_LEVEL=debug
AIDIS_DB_LOG_LEVEL=info
AIDIS_ENABLE_LOG_ROTATION=false
AIDIS_LOG_MAX_FILE_SIZE=20m
AIDIS_LOG_MAX_FILES=30d

# Legacy compatibility
LOG_LEVEL=debug
DB_LOG_LEVEL=info
ENABLE_LOG_ROTATION=false

# MCP Configuration (development)
AIDIS_MCP_DEBUG=handshake,transport,errors
AIDIS_MAX_RETRIES=3
AIDIS_INITIAL_RETRY_DELAY=1000
AIDIS_CIRCUIT_BREAKER_THRESHOLD=5
AIDIS_CIRCUIT_BREAKER_TIMEOUT=30000

# Legacy compatibility
MCP_DEBUG=handshake,transport,errors

# Feature Flags (development)
AIDIS_FEATURE_FLAG_PHASE1_FEATURE_FLAGS=false
AIDIS_FEATURE_FLAG_PHASE1_CONTRACT_TESTS=false
AIDIS_FEATURE_FLAG_PHASE1_REACT_ERROR_BOUNDARIES=false

# Legacy compatibility
FEATURE_FLAG_PHASE1_FEATURE_FLAGS=false
FEATURE_FLAG_PHASE1_CONTRACT_TESTS=false
FEATURE_FLAG_PHASE1_REACT_ERROR_BOUNDARIES=false

# Additional development settings
AIDIS_FRONTEND_URL=http://localhost:3000
AIDIS_CORS_ORIGIN=http://localhost:3000,http://localhost:3001
AIDIS_RATE_LIMIT_WINDOW_MS=900000
AIDIS_RATE_LIMIT_MAX_REQUESTS=100
AIDIS_MAX_FILE_SIZE=10485760
AIDIS_UPLOAD_DIR=uploads

# Legacy compatibility
FRONTEND_URL=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads