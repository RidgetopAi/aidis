# Logging Configuration for AIDIS Command Backend
# Copy to .env or add to your existing .env file

# Log Levels: error, warn, info, debug
LOG_LEVEL=info
DB_LOG_LEVEL=warn

# File Rotation Settings
ENABLE_LOG_ROTATION=true
LOG_MAX_FILE_SIZE=20m
LOG_MAX_FILES=30d

# Development vs Production Logging
# NODE_ENV=development enables console logging
# NODE_ENV=production disables console logging
NODE_ENV=development

# Database Configuration (if not already set)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=aidis_production
DATABASE_USER=ridgetop
DATABASE_PASSWORD=bandy

# Server Configuration (if not already set)
PORT=5001
JWT_SECRET=aidis-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# CORS Configuration (if not already set)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
