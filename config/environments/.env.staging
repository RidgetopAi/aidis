# AIDIS Staging Environment Configuration
NODE_ENV=staging

# Database Configuration (AIDIS standardized naming)
AIDIS_DATABASE_URL=postgresql://ridgetop@localhost:5432/aidis_staging
AIDIS_DATABASE_USER=ridgetop
AIDIS_DATABASE_HOST=localhost
AIDIS_DATABASE_NAME=aidis_staging
AIDIS_DATABASE_PORT=5432
# AIDIS_DATABASE_PASSWORD=REQUIRED - Set in environment or secrets management

# Legacy compatibility (fallback support)
DATABASE_USER=ridgetop
DATABASE_HOST=localhost
DATABASE_NAME=aidis_staging
DATABASE_PORT=5432

# Authentication (AIDIS standardized naming)
# AIDIS_JWT_SECRET=REQUIRED - Set in environment or secrets management
AIDIS_JWT_EXPIRES_IN=24h
AIDIS_BCRYPT_ROUNDS=12

# Legacy compatibility (fallback support)
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Service Ports (staging) - Phase 3 Dynamic Assignment
# Mix of fixed and dynamic for staging testing
AIDIS_HTTP_PORT=8080
AIDIS_MCP_BRIDGE_PORT=0
AIDIS_COMMAND_PROD_PORT=0
AIDIS_MCP_PORT=8080
AIDIS_HEALTH_PORT=8080

# Legacy compatibility variables
PORT=5000
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost

# CORS (staging - allow test domains)
AIDIS_CORS_ORIGIN=http://localhost:3000,http://localhost:3001,https://staging.aidis.local

# Legacy compatibility
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,https://staging.aidis.local

# Logging (staging)
AIDIS_LOG_LEVEL=info
AIDIS_DB_LOG_LEVEL=warn
AIDIS_ENABLE_LOG_ROTATION=true
AIDIS_LOG_MAX_FILE_SIZE=50m
AIDIS_LOG_MAX_FILES=14d

# Legacy compatibility
LOG_LEVEL=info
DB_LOG_LEVEL=warn
ENABLE_LOG_ROTATION=true
LOG_MAX_FILE_SIZE=50m
LOG_MAX_FILES=14d

# MCP Configuration (staging)
AIDIS_MCP_DEBUG=handshake,errors
AIDIS_MAX_RETRIES=4
AIDIS_INITIAL_RETRY_DELAY=1500
AIDIS_CIRCUIT_BREAKER_THRESHOLD=4
AIDIS_CIRCUIT_BREAKER_TIMEOUT=45000

# Legacy compatibility
MCP_DEBUG=handshake,errors

# Feature Flags (staging - test new features)
AIDIS_FEATURE_FLAG_PHASE1_FEATURE_FLAGS=true
AIDIS_FEATURE_FLAG_PHASE1_CONTRACT_TESTS=true
AIDIS_FEATURE_FLAG_PHASE1_REACT_ERROR_BOUNDARIES=true

# Legacy compatibility
FEATURE_FLAG_PHASE1_FEATURE_FLAGS=true
FEATURE_FLAG_PHASE1_CONTRACT_TESTS=true
FEATURE_FLAG_PHASE1_REACT_ERROR_BOUNDARIES=true

# Additional staging settings
AIDIS_FRONTEND_URL=https://staging.aidis.local
AIDIS_RATE_LIMIT_WINDOW_MS=600000
AIDIS_RATE_LIMIT_MAX_REQUESTS=75
AIDIS_MAX_FILE_SIZE=8388608
AIDIS_UPLOAD_DIR=/tmp/aidis/uploads

# Legacy compatibility
FRONTEND_URL=https://staging.aidis.local
RATE_LIMIT_WINDOW_MS=600000
RATE_LIMIT_MAX_REQUESTS=75
MAX_FILE_SIZE=8388608
UPLOAD_DIR=/tmp/aidis/uploads