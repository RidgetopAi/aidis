# AIDIS Production Environment Configuration
NODE_ENV=production

# Database Configuration (AIDIS standardized naming)
# AIDIS_DATABASE_URL=REQUIRED - Set in environment or secrets management
AIDIS_DATABASE_USER=ridgetop
AIDIS_DATABASE_HOST=localhost
AIDIS_DATABASE_NAME=aidis_production
AIDIS_DATABASE_PORT=5432
# AIDIS_DATABASE_PASSWORD=REQUIRED - Set in environment or secrets management

# Legacy compatibility (fallback support)
DATABASE_USER=ridgetop
DATABASE_HOST=localhost
DATABASE_NAME=aidis_production
DATABASE_PORT=5432

# Authentication (AIDIS standardized naming)
# AIDIS_JWT_SECRET=REQUIRED - Set in environment or secrets management
AIDIS_JWT_EXPIRES_IN=24h
AIDIS_BCRYPT_ROUNDS=12

# Legacy compatibility (fallback support)
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Service Ports (production) - Phase 3 Dynamic Assignment
# Set to 0 for dynamic assignment or specific port for fixed assignment
AIDIS_HTTP_PORT=0
AIDIS_MCP_BRIDGE_PORT=0
AIDIS_COMMAND_PROD_PORT=0
AIDIS_MCP_PORT=0
AIDIS_HEALTH_PORT=0

# Legacy compatibility variables (will be used if AIDIS_* not set)
PORT=0
MCP_SERVER_PORT=0
MCP_SERVER_HOST=localhost

# CORS (production - restrict to actual domains)
# AIDIS_CORS_ORIGIN=https://aidis.yourdomain.com

# Legacy compatibility
# CORS_ORIGIN=https://aidis.yourdomain.com

# Logging (production)
AIDIS_LOG_LEVEL=warn
AIDIS_DB_LOG_LEVEL=error
AIDIS_ENABLE_LOG_ROTATION=true
AIDIS_LOG_MAX_FILE_SIZE=100m
AIDIS_LOG_MAX_FILES=60d

# Legacy compatibility
LOG_LEVEL=warn
DB_LOG_LEVEL=error
ENABLE_LOG_ROTATION=true
LOG_MAX_FILE_SIZE=100m
LOG_MAX_FILES=60d

# MCP Configuration (production)
AIDIS_MCP_DEBUG=errors
AIDIS_MAX_RETRIES=5
AIDIS_INITIAL_RETRY_DELAY=2000
AIDIS_CIRCUIT_BREAKER_THRESHOLD=3
AIDIS_CIRCUIT_BREAKER_TIMEOUT=60000

# Legacy compatibility
MCP_DEBUG=errors

# Feature Flags (production - typically more conservative)
AIDIS_FEATURE_FLAG_PHASE1_FEATURE_FLAGS=false
AIDIS_FEATURE_FLAG_PHASE1_CONTRACT_TESTS=false
AIDIS_FEATURE_FLAG_PHASE1_REACT_ERROR_BOUNDARIES=true

# Legacy compatibility
FEATURE_FLAG_PHASE1_FEATURE_FLAGS=false
FEATURE_FLAG_PHASE1_CONTRACT_TESTS=false
FEATURE_FLAG_PHASE1_REACT_ERROR_BOUNDARIES=true

# Additional production settings
AIDIS_RATE_LIMIT_WINDOW_MS=300000
AIDIS_RATE_LIMIT_MAX_REQUESTS=50
AIDIS_MAX_FILE_SIZE=5242880
AIDIS_UPLOAD_DIR=/var/aidis/uploads

# Legacy compatibility
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=50
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/var/aidis/uploads