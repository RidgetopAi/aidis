# AIDIS Staging Environment Configuration
# Isolated staging environment with different ports to avoid conflicts

# Database Configuration
DATABASE_URL=postgresql://ridgetop@localhost:5432/aidis_staging
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ridgetop
POSTGRES_PASSWORD=
POSTGRES_DATABASE=aidis_staging

# Server Configuration - Different ports to avoid conflicts
MCP_PORT=9080
HTTP_PORT=6000
FRONTEND_PORT=3001

# Environment Settings
NODE_ENV=staging
LOG_LEVEL=debug
ENABLE_DEBUG_LOGS=true

# Features - Enable all for testing
ENABLE_METRICS_COLLECTION=true
ENABLE_PATTERN_DETECTION=true  
ENABLE_GIT_TRACKING=true
ENABLE_COMPLEXITY_ANALYSIS=true
ENABLE_OUTCOME_TRACKING=true

# Staging-specific settings
STAGING_MODE=true
ALLOW_DESTRUCTIVE_OPERATIONS=true
RESET_DATA_ON_RESTART=false

# Git Configuration (if different from production)
GIT_REPO_PATH=/home/ridgetop/aidis
GIT_BRANCH=staging

# Performance Settings (can be more relaxed for testing)
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT_MS=30000
DB_CONNECTION_POOL_SIZE=10

# Security (relaxed for staging)
ENABLE_CORS=true
CORS_ORIGIN=*
ENABLE_REQUEST_LOGGING=true
